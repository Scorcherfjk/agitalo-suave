---
export interface Point {
  title: string;
  description: string;
}

export interface Props {
  points: Point[];
  title: string;
}

const { points, title } = Astro.props;
---

<div class="my-10 mx-10 sm:mx-auto max-w-max">
  <div class="max-w-xl mb-10">
    <h2
      class="text-4xl font-bold tracking-tight text-complementary sm:text-5xl"
    >
      {title}
    </h2>
  </div>
  <ol
    class="relative space-y-8 before:absolute before:-ml-px before:h-full before:w-0.5 before:rounded-full before:bg-gray-200 dark:before:bg-gray-700"
  >
    {
      points.map((point) => (
        <li class="relative -ms-1.5 flex items-start gap-4">
          <span class="size-3 shrink-0 rounded-full bg-accent" />

          <div class="-mt-2">
            <h3 class="text-lg font-bold text-gray-800 dark:text-white">
              {point.title}
            </h3>

            <p class="mt-0.5 text-sm text-gray-700 dark:text-gray-200">
              {point.description}
            </p>
          </div>
        </li>
      ))
    }
  </ol>
</div>
